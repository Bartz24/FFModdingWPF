<UserControl x:Class="FF12Rando.SetupPaths"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FF12Rando"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" d:DesignWidth="920.67" d:DesignHeight="171.409" >
    <Grid>
        <Grid.Resources >
            <Style TargetType="Border" >
                <Setter Property="Padding" Value="1,5,1,5" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130px" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250px" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0">
            <Label HorizontalAlignment="Right">FF12 Steam Path</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="0">
            <TextBox x:Name="steamPath12Text" IsReadOnly="True" Text="{Binding FF12Path, Mode=OneWay}" Foreground="Gray"/>
        </Border>
        <Border Grid.Column="2" Grid.Row="0">
            <Button x:Name="steamPath12Button" Click="steamPath12Button_Click" Content="Select FF12 Folder"/>
        </Border>
        <Border Grid.Column="0" Grid.Row="1">
            <Label HorizontalAlignment="Right" VerticalAlignment="Center">FF12 VM Script Tools</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="1">
            <Label x:Name="ToolsTextLabel" VerticalAlignment="Center" Content="{Binding ToolsText, Mode=OneWay}" Foreground="{Binding ToolsTextColor, Mode=OneWay}"/>
        </Border>
        <Border Grid.Column="2" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" x:Name="toolsDownloadButton" Click="toolsDownloadButton_Click" Margin="0 0 5 0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download"/>
                            <Label Margin="0 -6">Download</Label>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" x:Name="toolsInstallButton" Click="toolsInstallButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrayArrowDown"/>
                            <Label Margin="0 -6">Install</Label>
                        </StackPanel>
                    </Button.Content></Button>
            </Grid>
        </Border>
        <Border Grid.Column="0" Grid.Row="2">
            <Label HorizontalAlignment="Right" VerticalAlignment="Center">FF12 External Loader</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="2">
            <Label x:Name="LoaderTextLabel" VerticalAlignment="Center" Content="{Binding LoaderText, Mode=OneWay}" Foreground="{Binding LoaderTextColor, Mode=OneWay}"/>
        </Border>
        <Border Grid.Column="2" Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" x:Name="loaderDownloadButton" Click="loaderDownloadButton_Click" Margin="0 0 5 0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download"/>
                            <Label Margin="0 -6">Download</Label>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" x:Name="loaderInstallButton" Click="loaderInstallButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrayArrowDown"/>
                            <Label Margin="0 -6">Install</Label>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
        <Border Grid.Column="0" Grid.Row="3">
            <Label HorizontalAlignment="Right" VerticalAlignment="Center">FF12 Lua Loader</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="3">
            <Label x:Name="LuaLoaderTextLabel" VerticalAlignment="Center" Content="{Binding LuaLoaderText, Mode=OneWay}" Foreground="{Binding LuaLoaderTextColor, Mode=OneWay}"/>
        </Border>
        <Border Grid.Column="2" Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" x:Name="luaLoaderDownloadButton" Click="luaLoaderDownloadButton_Click" Margin="0 0 5 0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download"/>
                            <Label Margin="0 -6">Download</Label>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" x:Name="luaLoaderInstallButton" Click="luaLoaderInstallButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrayArrowDown"/>
                            <Label Margin="0 -6">Install</Label>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
