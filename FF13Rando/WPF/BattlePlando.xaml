<UserControl x:Class="FF13Rando.BattlePlando"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FF13Rando"
      xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Name="BattlePlandoParent">

    <Grid Name="MainGrid" DataContext="{Binding ElementName=BattlePlandoParent}">
        <Label Content="Plando Text" HorizontalAlignment="Left" Margin="362,28,0,0" VerticalAlignment="Top" Background="Black"/>
        <ListBox Name="Battles" HorizontalAlignment="Left" Height="304" Margin="25,73,0,73" Width="211" Background="#FF840707" SelectionChanged="Battles_SelectionChanged"/>
        <ListBox Name="Scenes" Margin="0,73,25,0" Background="#FF2776CE" SelectionChanged="Scenes_SelectionChanged" HorizontalAlignment="Right" Width="232" VerticalAlignment="Top" Height="126"/>
        <Button x:Name="Export" Content="Export" HorizontalAlignment="Left" Margin="25,0,0,10" VerticalAlignment="Bottom" Click="Export_Click"/>
        <Button x:Name="Import" Content="Import" HorizontalAlignment="Left" Margin="130,0,0,10" VerticalAlignment="Bottom" Click="Import_Click"/>
        <Button x:Name="Complete" Content="Complete" HorizontalAlignment="Left" Margin="350,0,0,10" VerticalAlignment="Bottom" Click="Complete_Click"/>
        <ListBox x:Name="SceneContents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,225,25,73" Background="#FF615E04" HorizontalAlignment="Right" Width="187" SelectionChanged="SceneContents_SelectionChanged"/>
        <DataGrid x:Name="BattleContents" Margin="266,73,0,0" Background="#FF1C7B02" HorizontalAlignment="Left" Width="216" VerticalAlignment="Top" Height="126" IsReadOnly="true">
        </DataGrid>
        <DataGrid x:Name="NewBattleContents" Margin="266,225,0,0" Background="#FF1C7B02" HorizontalAlignment="Left" Width="216" VerticalAlignment="Top" Height="152" SelectionChanged="NewBattleContents_SelectionChanged" IsReadOnly="true">
        </DataGrid>
        <ComboBox x:Name="RegionSelector" HorizontalAlignment="Left" Margin="118,40,0,0" VerticalAlignment="Top" Width="159" SelectionChanged="RegionSelector_SelectionChanged"/>
        <Label Content="Region:" HorizontalAlignment="Left" Margin="66,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="494,227,0,0" VerticalAlignment="Top" Width="83" IsEnabled="False" Click="AddButton_Click"/>
        <Button x:Name="RemoveButton" Content="Remove" HorizontalAlignment="Left" Margin="494,285,0,0" VerticalAlignment="Top" IsEnabled="False" Click="RemoveButton_Click"/>
        <Button x:Name="Validate" Content="Validate" HorizontalAlignment="Left" Margin="237,0,0,10" VerticalAlignment="Bottom" Click="Validate_Click"/>
        <Button x:Name="AddCharaspecEntryButton" Content="+" HorizontalAlignment="Left" Margin="588,392,0,0" VerticalAlignment="Bottom" IsEnabled="False" Click="AddCharaspecEntryButton_Click"/>
        <Button x:Name="RemoveCharaspecEntryButton" Content="-" HorizontalAlignment="Left" Margin="733,392,0,0" VerticalAlignment="Bottom" IsEnabled="False" Click="RemoveCharaspecEntryButton_Click"/>
        <ComboBox x:Name="EnemySelector" HorizontalAlignment="Left" Margin="635,396,0,0" VerticalAlignment="Bottom" Width="93"/>

    </Grid>
</UserControl>
